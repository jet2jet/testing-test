{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "noImplicitReturns": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "rootDir": "./src",
    "skipLibCheck": true,
    "strict": true,
    "stripInternal": true,
    "target": "es2022",
    "verbatimModuleSyntax": true
  },
  "include": ["src/**/*.tsx"]
}
